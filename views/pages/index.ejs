</head>

<body>
  <header class="header">
    <nav class="navbar">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="images/poolkaaa.png" alt="poolka" width="150" height="30">
        </a>
        <div class="login-menu">
          <ul>
            <li>
              <% if (!currentUser) {%>
                <a href="/login">
                   <i class="fa fa-user" aria-hidden="true"></i>
                   <span class="padding_5">Login</span>
                </a>
             <% } else { %>
                <a href="#">
                   <i class="fa fa-user" aria-hidden="true"></i>
                   <span class="padding_5"><%= currentUser.username %></span>
                   <!-- <form action="/logout" method="POST">
                      <button>Sign Out</button>
                   </form> -->
                   <!-- <a href="/logout">
                      <i class="#" aria-hidden="true"></i>
                      <span class="padding_5">Logout</span>
                   </a> -->
                </a>
             <% } %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section id="info" class="container">
      <div class="info-inner-container">
        <div class="welcome-message">
          <h1>X POOLKA</h1>
          <p>WELCOME [userName] <br> WHERE DO YOU WANT TO GO TODAY?</p>
        </div>
        <div class="book-ur-car">
          <form action="index2.html" id="#">
            <div class="pick-location bookinput-item">
              <select class="custom-select">
                <option selected="">Select Location</option>
                <option value="1">Dhaka</option>
                <option value="2">Comilla</option>
                <option value="3">Barishal</option>
                <option value="3">Rangpur</option>
              </select>
            </div>
            <div class="pick-location bookinput-item">
              <select class="custom-select">
                <option selected="">Select Destination</option>
                <option value="1">Dhaka</option>
                <option value="2">Comilla</option>
                <option value="3">Barishal</option>
                <option value="3">Rangpur</option>
              </select>
            </div>
            <div class="bookcar-btn bookinput-item">
              <button type="submit">Request Ride</button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </header>


  <section class="footer">
    <div class="footer-widget container">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="single-footer-widget">
            <div class="widget-body">
              <img src="images/poolkaaa.png" alt="poolka" width="150" height="30">
              <div>
                <a href="https://goo.gl/maps/b5mt45MCaPB2" class="map-show" target="_blank">Show Location</a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6 col-md-6">
          <div class="single-footer-widget">
            <h2>contact</h2>
            <div class="widget-body">
              <ul class="get-touch">
                <li><i class="fa fa-mobile"></i> +234 111 1111 111</li>
                <li><i class="fa fa-envelope"></i> TobiSheriff@gmail.com</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script> -->
